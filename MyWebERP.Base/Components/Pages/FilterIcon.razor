@using MyWebERP.Data

@code {
    [Parameter]
    public int Size { get; set; } = 24;

    [Parameter]
    public DotAlign DotAlignment { get; set; } = DotAlign.None;

    private int StrokeWidth => Math.Max(1, Size / 8);
    private string StrokeColor => "#0d6efd";
    private string DotColor => "#ffc107";

    private int Y1 => Size / 4;
    private int Y2 => Size / 2;
    private int Y3 => Size * 3 / 4;

    private int X1Top => 0;
    private int X2Top => Size;

    private int X1Mid => Size / 6;
    private int X2Mid => Size - X1Mid;

    private int X1Bot => Size / 3;
    private int X2Bot => Size - X1Bot;

    // Dot: đáy chạm đúng line thứ 2
    private int DotRadius => Y2 / 2 - 2;// (Y2 - Y1) / 2;
    private int DotCy => Y2 / 2 + 1;// (Y1 + Y2) / 2;

    private int DotCx => DotAlignment switch
    {
        DotAlign.Left => X1Top + DotRadius,
        DotAlign.Right => X2Top - DotRadius,
        _ => 0
    };
}
<svg width="@Size" height="@Size" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
    <!-- Các đường ngang -->
    <line x1="@X1Top" y1="@Y1" x2="@X2Top" y2="@Y1" stroke="@StrokeColor" stroke-width="@StrokeWidth" stroke-linecap="round" />
    <line x1="@X1Mid" y1="@Y2" x2="@X2Mid" y2="@Y2" stroke="@StrokeColor" stroke-width="@StrokeWidth" stroke-linecap="round" />
    <line x1="@X1Bot" y1="@Y3" x2="@X2Bot" y2="@Y3" stroke="@StrokeColor" stroke-width="@StrokeWidth" stroke-linecap="round" />

    @if (DotAlignment != DotAlign.None)
    {
        <circle cx="@DotCx" cy="@DotCy" r="@DotRadius" fill="@DotColor" />
    }
</svg>
