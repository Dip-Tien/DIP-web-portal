@page "/documentviewer/{ReportParam}"

@using DevExpress.Blazor.Reporting
@using DevExpress.XtraReports.UI

@* @inject NavigationManager UriHelper *@

<link href="_content/DevExpress.Blazor.Themes/blazing-berry.bs5.css" rel="stylesheet" />
<link rel="stylesheet" href="_content/DevExpress.Blazor.Reporting.Viewer/css/dx-blazor-reporting-components.bs5.css">

<DxDocumentViewer ReportName=@ReportEntry Height="1000px" Width="100%">
    <DxDocumentViewerTabPanelSettings Width="180" />
</DxDocumentViewer>

@code {
    [Parameter]
    public string ReportParam { get; set; }
    public string ReportEntry { get; set; }

    DxDocumentViewer viewer;

    protected override async Task OnParametersSetAsync()
    {
        Model.ReportViewParamItem paramItem = await MyWebERP.Data.MyLib.Base642Object<Model.ReportViewParamItem>(ReportParam);

        ReportEntry = Newtonsoft.Json.JsonConvert.SerializeObject(paramItem);
    }
}
